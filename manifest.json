{
  "manifest_version": 3,
  "name": "Snap Hero - Screenshot Capture & Editor Tool",
  "short_name": "Snap Hero",
  "version": "1.3.0",
  "description": "Capture full-page or area screenshots, annotate with pen, arrows, text, blur & shapes, then download or copy to clipboard instantly",
  "author": "Snap Hero",
  "homepage_url": "https://github.com/deep9038/Snap-Hero",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Snap Hero",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["scripts/full-page.js", "scripts/area-select.js", "editor/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
